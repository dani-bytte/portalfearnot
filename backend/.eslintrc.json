{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "indent": ["error", 2],
    "no-unused-vars": ["error"],
    "no-var": ["error"],
    "prefer-const": ["error"],
    "eqeqeq": ["error", "always"],
    "camelcase": ["error", {"properties": "always"}]
  }
}
